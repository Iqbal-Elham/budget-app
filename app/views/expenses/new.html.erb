<%= render 'shared/header', title: "New Transaction" %>

<%= form_with(model: @expense, url: category_expenses_path) do |form| %>
  <% if @expense.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% @expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-fields m-1">
    <div>
      <%= form.text_field :name, class: "form-field", placeholder: "Name" %>
    </div>

    <div>
      <%= form.text_field :amount, class: "form-field", placeholder: "Amount" %>
    </div>

    <div>
      <%= form.submit "Create Transaction", class: "btn btn-primary w-100 btn-lg mt-2" %>
    </div>
  </div>
<% end %>
